<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-body">
            <form action="/citas/edit/{{cita.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="asunto" class="form-control" placeholder="Asunto" value="{{cita.asunto}}"
                        autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="especialidad" class="form-control" placeholder="Especialidad"
                        value="{{cita.especialidad}}">
                </div>
                <div class="form-group">
                    <textarea name="description" rows="2" class="form-control"
                        placeholder="Descripcion">{{cita.description}}</textarea>
                </div>
                <div class="form-group">
                    <input type="text" name="fecha" class="form-control" placeholder="Nueva fecha">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Modificar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>