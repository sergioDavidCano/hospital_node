<div class="container p-4">
    <div class="row">
        {{#each citas}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title text-uppercase">
                        {{asunto}}
                    </h5>
                    <p class="text-muted">
                        {{timeago create_at}}
                    </p>
                    <h5 class="m-2">{{especialidad}}</h5>
                    <p class="text-muted">
                        {{description}}
                    </p>
                    <h6 class="card-title text-uppercase">
                        La cita esta programada para el proximo {{fecha}}
                    </h6>
                    </a>
                    <a class="btn btn-success" href="/novedades/{{id}}">
                        Novedades
                    </a>
                    <a class="btn btn-secondary" href="/citas/edit/{{id}}">
                        Modificar
                    </a>
                    <a class="btn btn-danger" href="/citas/delete/{{id}}">
                        Cancelar cita
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No tiene cita en este momento.</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>