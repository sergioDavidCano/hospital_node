<div class="container p-4">
    <div class="row">
        {{#each citas}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{asunto}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3>
                    </a>
                    <p class="m-2">{{especialidad}}</p>
                    <p class="text-muted">
                        {{{timeago create_at}}}
                    </p>
                    <a class="btn btn-danger" href="/citas/delete/{{id}}">
                        Eliminar
                    </a>
                    <a class="btn btn-secondary" href="/citas/edit/{{id}}">
                        Editar
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No tienes cita en este momento.</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>