<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-body">
            <form action="/novedad/{{cita.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="asunto" class="form-control" placeholder="Asunto" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="novedad" class="form-control" placeholder="Novedad">
                </div>
                <div class="form-group">
                    <textarea name="description" rows="2" class="form-control" placeholder="Descripcion"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Enviar novedad
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>