<div class="container p-4">
    <div class="row">
        {{#each citas}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title text-uppercase">
                        {{asunto_novedad}}
                    </h5>
                    <h6 class="text-muted">
                        {{novedad}}
                    </h6>
                    <p class="text-muted">
                        {{timeago create_at_cita}}
                    </p>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No ha reportado novedades por el momento.</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>