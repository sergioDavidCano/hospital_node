<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-body">
            <form action="/novedad/{{cita.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="asunto_novedad" class="form-control" placeholder="Asunto"
                        value="{{asunto_novedad}}" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="novedad" rows="2" class="form-control"
                        placeholder="Novedad">{{cita.novedad}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Agregar novedad
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>