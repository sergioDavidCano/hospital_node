<div class="container p-4">
    <div class="row">
        {{#each users}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                        <h5 class="card-title text-uppercase">
                            {{username}}
                        </h5>
                    </a>
                    <h6 class="m-2">{{email}}</h6>
                    <p class="text-muted">
                         Paciente #{{id}}
                    </p>
                    <a class="btn btn-danger" href="/citasAll/paciente/{{id}}">
                        Ver citas
                    </a>
                    <a class="btn btn-secondary" href="/pacientes/asignar/{{id}}">
                        Asignar citas
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay pacientes en este momento</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>